{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
//    "outDir": "./lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    //    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "./src/types/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
//    "./src/*"
  ],
  "exclude": [
    "node_modules",
    "../../../../../node_modules"
  ]
}

